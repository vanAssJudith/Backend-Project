@model Core.Models.Quiz

@{
    ViewData["Title"] = "Play";
}

<h1>Play</h1>

<div class="c-quiz">
    <h4>Quiz</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Onderwerp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Onderwerp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beschrijving)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beschrijving)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Moeilijkheidsgraad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Moeilijkheidsgraad.Titel)
        </dd>
    </dl>

    <h2>Vragen</h2>
    <div class="c-quiz__vragen">
        @foreach (var vraag in Model.Vragen)
        {
            <div class="c-quiz__vraag">
                <div class="c-quiz__vraag--titel">@vraag.Titel: </div>
                <div>@vraag.Beschrijving</div>
                <div><img class="c-quiz__vraag--img" src="~/images/@vraag.AfbeeldingURL" alt="afbeelding van @vraag.Titel"/></div>
                <div class="c-quiz__antwoorden">
                    @foreach (var antwoord in vraag.Antwoorden)
                    {
                        <input class="c-quiz__radiobtn" type="radio" name="vraag-@vraag.Id" value="@antwoord.Id" id="@antwoord.Id"/>
                        <label class="c-quiz__antwoord" for="@antwoord.Id">
                            <span>@antwoord.Omschrijving</span>
                            @if (antwoord.AfbeeldingURL != null)
                            {
                                <img class="c-quiz__antwoord-img" src="~/images/@antwoord.AfbeeldingURL" alt="afbeelding van @antwoord.Omschrijving" />

                            }
                        </label>
                    }
                </div>
            </div>
        }
    </div>

</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

<style >
    .c-quiz{

    }

    .c-quiz__vragen{

    }

    .c-quiz__vraag{
        margin: 24px;
    }

    .c-quiz__vraag--titel{
        font-size: 24px;
    }

    .c-quiz__vraag--img{
        height:100px;
        margin: 24px 0 24px 0;
    }

    .c-quiz__antwoorden{
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        column-gap: 2rem;
        font: bold;
    }

    .c-quiz__radiobtn{
        display:none;
    }
    .c-quiz__radiobtn:checked + .c-quiz__antwoord{
        border-color: white;
    }

    .c-quiz__antwoord{
        border:1px solid transparent;
    }


</style>